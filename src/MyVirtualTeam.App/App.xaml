<Application
    x:Class="MyVirtualTeam.App.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:MyVirtualTeam.App"
    xmlns:views="clr-namespace:MyVirtualTeam.App.Views"
    xmlns:vm="clr-namespace:MyVirtualTeam.App.ViewModels"
    StartupUri="Views/MainView.xaml">

    <Application.Resources>

        <ResourceDictionary>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/Style.xaml" />
                <ResourceDictionary Source="Themes/Colors.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate DataType="{x:Type vm:HomeViewModel}">
                <views:HomeView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:NewProjectViewModel}">
                <views:NewProjectView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:VirtualMachinesViewModel}">
                <views:VirtualMachinesView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:EventsViewModel}">
                <views:EventsView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:SequencesViewModel}">
                <views:SequencesView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:SettingsViewModel}">
                <views:SettingsView />
            </DataTemplate>

        </ResourceDictionary>

    </Application.Resources>

</Application>
