<UserControl
  x:Class="MyVirtualTeam.App.Views.SettingsView"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:MyVirtualTeam.App"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:views="clr-namespace:MyVirtualTeam.App.Views"
  d:DesignHeight="500"
  d:DesignWidth="800"
  mc:Ignorable="d">

  <Grid
    MinWidth="400"
    MaxWidth="900"
    VerticalAlignment="Center">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition MinHeight="300" MaxHeight="600" />
      <RowDefinition Height="50" />
    </Grid.RowDefinitions>

    <StackPanel Grid.Row="0" Orientation="Vertical">
      <Rectangle Height="1" Fill="{StaticResource Static.Text}" />
      <TextBlock FontSize="25" Text="Settings" />
      <Rectangle Height="1" Fill="{StaticResource Static.Text}" />
    </StackPanel>

    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
      <Border Background="DarkCyan" />
    </ScrollViewer>

    <StackPanel
      Grid.Row="2"
      HorizontalAlignment="Center"
      Background="blue"
      Orientation="Horizontal">
      <Button
        Margin="0,0,20,0"
        Padding="10"
        Content="Back" />
      <Button Margin="20,0,0,0" Content="Save" />
    </StackPanel>

  </Grid>

</UserControl>
