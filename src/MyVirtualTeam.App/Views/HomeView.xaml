<UserControl
    x:Class="MyVirtualTeam.App.Views.HomeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MyVirtualTeam.App"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:MyVirtualTeam.App.Views"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid
        Margin="0,0,0,10"
        HorizontalAlignment="Center"
        VerticalAlignment="Center">

        <Grid.RowDefinitions>
            <RowDefinition Height="100px" />
            <RowDefinition Height="100px" />
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="50"
            Foreground="#666666"
            Text="Project" />

        <StackPanel
            Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Horizontal">

            <Button
                Width="140"
                Height="45"
                Command="{Binding ToNewProject}"
                Content="New"
                FontSize="22" />

            <TextBlock
                Margin="30px"
                VerticalAlignment="Center"
                FontSize="22"
                Foreground="#666666"
                Text="or" />

            <Button
                Width="140"
                Height="45"
                Command="{Binding toOpenProject}"
                Content="Open"
                FontSize="22" />

        </StackPanel>

    </Grid>

</UserControl>
